<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.feliperrm.babbelproject.activities.AboutActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/about_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_more_trasparent"
        />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageAbout"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:civ_border_color="#EEEEEE"
        android:src="@drawable/felipe_image"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#c7000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:shadowColor="#1e1e1e"
        android:shadowDy="1"
        android:shadowDx="-1"
        android:shadowRadius="1"
        android:layout_below="@+id/imageAbout"
        android:id="@+id/textViewAbout"
        android:textSize="16sp"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_project"
        android:textColor="@android:color/white"
        />


</RelativeLayout>
